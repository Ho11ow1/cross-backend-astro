---
	import { GetBackend, GetBackendURL } from "@data/AstroDefs.ts";
	import { GetAllUsers } from "@data/Fetch.ts";
	import { User } from "@data/Types.ts";
	import UserLookup from "@components/UserLookup.astro";

	const users: User[] = (await GetAllUsers()) ?? [];
---

<html lang="en">
	<head>
		<title>Astro</title>

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta charset="utf-8" />
	</head>
	<body>
		<h1>Astro</h1>
		<h3>{`${GetBackend()}`}</h3>
		<h3>{`${GetBackendURL()}`}</h3>
		{
			users.map((user) => {
				return (
					<div>
						<h1>ID: {user.Id}</h1>
						<h2>Username: {user.UserName}</h2>
						<h2>Password: {user.Password}</h2>
						{user.Email && <h2>Email: {user.Email}</h2>}
						{user.DisplayName && <h2>DisplayName: {user.DisplayName}</h2>}
					</div>
				);
			})
		}
		<h4>User count: {users.length}</h4>
	
		<UserLookup />
	</body>
</html>
